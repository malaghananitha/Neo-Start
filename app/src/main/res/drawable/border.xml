<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
            android:color="@color/cardview_dark_background"/> <!-- Border color -->
            <corners android:radius="30dp"/> <!-- Adjust to fit your image size -->
        </shape>
    </item>
</layer-list>
